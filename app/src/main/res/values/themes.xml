<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Blades" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Blades" parent="Base.Theme.Blades" />

    <style name="SCREEN">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="CAR">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#BBBBBB</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VEHICLE_NAME_TEXT">
        <item name="android:textColor">#BBBBBB</item>
    </style>

    <style name="BUTTON">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="BUTTON_GO_BACK">
        <item name="android:textColor">#d1d1d1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TRACK_BUTTON">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="PLUS_BUTTON">
        <item name="android:background">@color/cyan</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="EDIT_TEXT">
        <item name="android:textColorHint">#797979</item>
        <item name="android:textColor">#BBBBBB</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Blades.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Blades.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Blades.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>