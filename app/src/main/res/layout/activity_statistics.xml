                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Refueled: 9.88"
                style="@style/TEXT"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:drawableStart="@drawable/baseline_attach_money_24"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberTile4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_car_info"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/memberNick4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dorajn"
                style="@style/TEXT"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/used4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Used: 9.88"
                style="@style/TEXT"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:layout_toRightOf="@id/memberNick4"
                android:drawablePadding="1dp"
                android:drawableStart="@drawable/baseline_money_off_24"

                />

            <TextView
                android:id="@+id/refueled4"
                android:layout_toRightOf="@id/used4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Refueled: 9.88"
                style="@style/TEXT"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:drawableStart="@drawable/baseline_attach_money_24"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberTile5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_car_info"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/memberNick5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
