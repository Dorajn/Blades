<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    style="@style/SCREEN">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Statistics"
        style="@style/TEXT"
        android:textStyle="bold"
        android:textSize="22dp"
        android:id="@+id/statText"/>


    <TextView
        android:id="@+id/statInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="There are all information about the expenses of individual persons."
        style="@style/TEXT_STAT"
        android:textSize="16dp"
        android:layout_below="@id/statText"/>

    <LinearLayout
        android:id="@+id/tiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statInfo"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/memberTile1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_car_info"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/memberNick1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                style="@style/TEXT"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/used1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Used: 9.88"
                style="@style/TEXT"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:layout_toRightOf="@id/memberNick1"
                android:drawablePadding="1dp"
                android:drawableStart="@drawable/baseline_money_off_24"

                />

            <TextView
                android:id="@+id/refueled1"
                android:layout_toRightOf="@id/used1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Refueled: 9.88"
                style="@style/TEXT"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:drawableStart="@drawable/baseline_attach_money_24"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberTile2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_car_info"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/memberNick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dorajn"
                style="@style/TEXT"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/used2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Used: 9.88"
                style="@style/TEXT"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:layout_toRightOf="@id/memberNick2"
