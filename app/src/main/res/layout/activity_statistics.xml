                android:drawableStart="@drawable/baseline_money_off_24"

                />

            <TextView
                android:id="@+id/refueled2"
                android:layout_toRightOf="@id/used2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Refueled: 9.88"
                style="@style/TEXT"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:drawableStart="@drawable/baseline_attach_money_24"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberTile3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_car_info"
            android:gravity="center_vertical"
